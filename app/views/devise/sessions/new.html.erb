<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%= heroicon "home", style: :outline, class: "mx-auto h-12 w-12 text-indigo-600" %>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Access your neighborhood information
      </p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "mt-8 space-y-6") do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="relative">
          <%= f.label :email, "Email address", class: "sr-only" %>
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%= heroicon "envelope", style: :outline, class: "h-5 w-5 text-gray-400" %>
          </div>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "Email address",
                class: "appearance-none rounded-none relative block w-full px-3 py-3 pl-10 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg" %>
        </div>
        
        <div class="relative">
          <%= f.label :password, "Password", class: "sr-only" %>
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%= heroicon "lock-closed", style: :outline, class: "h-5 w-5 text-gray-400" %>
          </div>
          <%= f.password_field :password, 
                autocomplete: "current-password",
                placeholder: "Password",
                class: "appearance-none rounded-none relative block w-full px-3 py-3 pl-10 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign in", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
