<% content_for :title, "Residents Management" %>

<div class="container mx-auto px-4 py-8" data-controller="residents">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Residents Management</h1>
    
    <!-- Search and Filter Controls -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
        <!-- Name Search -->
        <div>
          <label for="search-input" class="block text-sm font-medium text-gray-700 mb-2">Search by Name</label>
          <input type="text" 
                 id="search-input" 
                 data-residents-target="searchInput"
                 data-action="input->residents#performSearch"
                 placeholder="Type to search residents..." 
                 class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        
        <!-- Subscription Filter -->
        <div>
          <label for="subscription-filter" class="block text-sm font-medium text-gray-700 mb-2">Newsletter Subscription</label>
          <select id="subscription-filter" 
                  data-residents-target="subscriptionFilter"
                  data-action="change->residents#applyFilters"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Residents</option>
            <option value="true">Subscribed</option>
            <option value="false">Not Subscribed</option>
          </select>
        </div>
        
        <!-- New Residents Filter -->
        <div>
          <label for="new-residents-filter" class="block text-sm font-medium text-gray-700 mb-2">New Residents</label>
          <select id="new-residents-filter" 
                  data-residents-target="newResidentsFilter"
                  data-action="change->residents#applyFilters"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Residents</option>
            <option value="true">New (Last 30 Days)</option>
          </select>
        </div>
        
        <!-- Clear Filters -->
        <div>
          <button data-action="click->residents#clearFilters"
                  class="w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition-colors duration-150">
            Clear Filters
          </button>
        </div>
      </div>
      
      <!-- Results Count -->
      <div class="mt-4 text-sm text-gray-600" data-residents-target="resultsCount">
        Loading residents...
      </div>
    </div>
    
    <!-- Residents List -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="p-6">
        <div data-residents-target="loadingIndicator" class="text-center py-8 text-gray-500">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
          <p class="mt-2">Loading residents...</p>
        </div>
        
        <div data-residents-target="residentsList" class="hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Newsletter</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody data-residents-target="residentsTableBody" class="bg-white divide-y divide-gray-200">
                <!-- Residents will be populated here -->
              </tbody>
            </table>
          </div>
        </div>
        
        <div data-residents-target="noResults" class="hidden text-center py-8 text-gray-500">
          <p>No residents found matching your criteria.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Resident Row Template -->
<template data-residents-target="residentRowTemplate">
  <tr class="hover:bg-gray-50">
    <td class="px-6 py-4 whitespace-nowrap">
      <div class="flex items-center">
        <div>
          <div class="text-sm font-medium text-gray-900" data-field="display_name"></div>
          <div class="text-sm text-gray-500" data-field="official_name"></div>
        </div>
      </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
      <div class="text-sm text-gray-900" data-field="address"></div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
      <div class="text-sm text-gray-900" data-field="email"></div>
      <div class="text-sm text-gray-500" data-field="phone"></div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
      <span data-field="subscription_badge" class="inline-flex px-2 py-1 text-xs font-semibold rounded-full"></span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
      <span data-field="status_badge" class="inline-flex px-2 py-1 text-xs font-semibold rounded-full"></span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
      <button data-field="edit_button" class="text-blue-600 hover:text-blue-900 mr-3">Edit</button>
      <button data-field="view_button" class="text-gray-600 hover:text-gray-900">View</button>
    </td>
  </tr>
</template>